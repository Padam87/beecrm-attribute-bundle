<form class="form-inline clearfix" action="{{ path('padam87_attribute_definition_index') }}" method="GET" {{ form_enctype(form) }}>
    {% for name, field in form %}
        {% if name != '_token' %}
            {{ form_label(field) }}:
        {% endif %}
        {{ form_widget(field) }}
    {% endfor %}
    <hr />
    <button class="btn btn-primary pull-right">
        <i class="icon-search"></i> {% trans %}search{% endtrans %}
    </button>
</form>

<div class="page-header">
    <h2>{% trans %}attributes{% endtrans %}</h2>
</div>

<table class="orders-table table">
<thead>
    <tr>
        <th>{{ knp_pagination_sortable(pagination, 'definition.name'|trans, 'ad.name')|raw }}</th>
        <th>
            <a href="{{ path('padam87_attribute_definition_new') }}" class="btn btn-primary">
                {% trans %}add{% endtrans %}
            </a>
        </th>
    </tr>
</thead>
<tbody>
{% for AttributeDefinition in pagination %}
    <tr>
        <td>
            <a class="" href="{{ path('padam87_attribute_definition_edit', {'id': AttributeDefinition.getId()}) }}">
                {{ AttributeDefinition.getName() }}
            </a>
        </td>
        <td class="actions">
            <a class="btn" href="{{ path('padam87_attribute_definition_delete', {'id': AttributeDefinition.getId()}) }}">{% trans %}remove{% endtrans %}</a>
            <a class="btn" href="{{ path('padam87_attribute_definition_edit', {'id': AttributeDefinition.getId()}) }}">{% trans %}edit{% endtrans %}</a>
        </td>
    </tr>
{% endfor %}
</tbody>
</table>

{{ knp_pagination_render(pagination)|raw }}
